# Base de datos principal
DATABASE_URL="postgresql://usuario:password@localhost:5432/curet-importaciones"

# Base de datos demo (para modo demo)
DEMO_DATABASE_URL="postgresql://usuario:password@localhost:5432/apps_postgres_sistemadechinademo"

# Redis Cache (opcional - usa memoria si no está configurado)
# Desarrollo local:
REDIS_URL="redis://localhost:6379"
# Easypanel (después de crear servicio Redis):
# REDIS_URL="redis://:PASSWORD@redis:6379"

# API
NEXT_PUBLIC_API_URL="http://localhost:3000"

# Modo
NODE_ENV="development"

# Pusher (Real-time Notifications)
# Obtén estas credenciales de https://dashboard.pusher.com
NEXT_PUBLIC_PUSHER_KEY="your_pusher_key"
NEXT_PUBLIC_PUSHER_CLUSTER="us2"
PUSHER_APP_ID="your_app_id"
PUSHER_SECRET="your_pusher_secret"

# Feature Flags
NEXT_PUBLIC_ENABLE_REALTIME_NOTIFICATIONS="false"
